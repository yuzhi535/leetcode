/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
 
 //上面是题目给的链表定义
 //思路是构建指针数组，接着进行反转
 
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        //排除特殊情况
        if (!head)
            return head;
        if (!head->next)
            return head;
            
        vector<ListNode*> arr;
        ListNode* p = head;
        while (p)
        {
            arr.push_back(p);
            p = p->next;
        }
        //反转链表。这只是简单的把值对换，其实也可以对换指针
        size_t i = 0;
        while (i < arr.size() / 2)
        {
            int t = arr.at(i)->val;
            arr.at(i)->val = arr.at(arr.size() - 1 - i)->val;
            arr.at(arr.size() - 1 - i)->val = t;
            ++i;
        }
        return head;
    }
};
